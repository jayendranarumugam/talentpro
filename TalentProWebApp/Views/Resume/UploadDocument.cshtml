@{
    Layout = "~/Views/Shared/_LayoutResume.cshtml";
}
<html>
<head>
    <script type="text/javascript">
        debugger;
        function validate_fileupload(fileName) {
            var allowed_extensions = new Array("pdf");
            var file_extension = fileName.split('.').pop();
            for (var i = 0; i <= allowed_extensions.length; i++) {
                if (allowed_extensions[i] == file_extension) {
                    return true; // valid file extension
                }
            }
            alert("not a pdf file");
            document.getElementById("inp").value = "";
            return false;
        }
        function ValidateSize(file) {
            var FileSize = file.files[0].size / 1024 / 1024; // in MB
            if (FileSize > 2) {
                alert('File size exceeds 2 MB');
                document.getElementById("inp").value = "";
            }

        }



/**/</script>
</head>
<title>Talent Pro - Upload Doc</title>
<body>
    <br /><br />
    @using (Html.BeginForm("Upload", "Resume", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="wrapper">
            <input id="inp" type="file" name="file" onchange="validate_fileupload(this.value),ValidateSize(this);" accept="application/pdf" />
            <label for="file">Select a pdf file (Max 2MB) to upload</label>
            <br /><br /><br />
            <input type="submit" name="Submit" id="Submit" value="Upload" />
            <br><br>
            @ViewBag.Message
        </div>
    }
</body>

</html>
